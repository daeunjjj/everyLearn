<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="noticeMapper">

	<insert id="write">
		INSERT INTO NOTICE 
		( 
			TITLE 
			, CONTENT 
			, ADMIN
			, ENROLL_DATE
		) 
		VALUES 
		(  
			#{title}
			, #{content}
			, #{nick} <!-- 관리자인 no 받아서 조인 -->
			, SYSDATE
		)
	</insert>
	
	<update id="updateCnt">
		UPDATE NOTICE_CNT
			SET
				CNT = CNT +1
	</update>

  
</mapper>